<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaApp.View.ThankYouView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Thank you for your order!" VerticalOptions="Center" HorizontalOptions="Center" Margin="10,200,10,10"
                   FontSize="20" TextColor="Blue"/>
            <Button Text="Continue" VerticalOptions="Center" HorizontalOptions="Center" Margin="10,10,10,10" BackgroundColor="Red"
                    TextColor="White" Command="{Binding ContinueCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>